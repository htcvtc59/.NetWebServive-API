
@{
    ViewBag.Title = "TranferMoney";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string codeacc = (string)ViewBag.AccountCode;
}

<h2>TranferMoney</h2>
@using (Html.BeginForm("TranferMoney", "Home"))
{
    <div class="form-group">
        @Html.Label("Receive Code")
        @Html.TextBox("coderecieve", "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Amount")
        @Html.TextBox("amount", "", new { @class = "form-control" })
    </div>
    <div class="form-group hide">
        @Html.TextBox("codetranfer", codeacc, new { @class = "form-control" })
    </div>
    <input type="submit" value="Send" class="btn btn-default" />

}
